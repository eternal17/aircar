<div class="form-container">
  <h2> Booking details </h2>
  <hr>
  <p> <strong>Make:</strong> <%= @booking.car.make %> </p>
  <p> <strong>Model:</strong> <%= @booking.car.model %> </p>
  <p> <strong>Year:</strong> <%= @booking.car.year %> </p>

  <p> <strong>Start date:</strong> <%= @booking.start_date %> </p>
  <p> <strong>End date:</strong> <%= @booking.end_date %> </p>
  <p> <strong>Price / day:</strong> <%= @booking.car.price %> </p>

  <p> <strong>Days:</strong> <%= hours = ((@booking.end_date - @booking.start_date) / 3600 / 24).to_i %></p>
  <p><strong>Total:</strong> <%= hours * @booking.car.price %></p>
</div>
