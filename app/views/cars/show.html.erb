<div class="show-container">
  <ul class = "list-unstyled">
    <li>
      <div class="d-flex">
        <div class="title-heart">
          <h2 class="car-card-title"><%= @car[:make] %> <%= @car[:model] %> <span class=""><%= @car[:year] %></span></h2>
          <i class="far fa-heart red-heart"></i>
        </div>
      </div>
    </li>
  </ul>

  <%= link_to "Make a reservation",  new_car_booking_path(@car), class: "btn btn-primary"  %>
</div>
